<?xml version='1.0' encoding='UTF-8'?>
<!--Proposed Tool Section: [File Handling]-->
<tool id="zip-nmrml-collection" name="ZIP nmrML Collection" version="0.1">
  <requirements>
    <container type="docker">container-registry.phenomenal-h2020.eu/phnmnl/nmrmlconv</container>
  </requirements>
  <description>Create a zip archive of a nmrML collection.</description>
  <command><![CDATA[
	rm -f $outfile;
	ls -al $infile;
	zip -r $outfile `echo $infile | tr ',' ' '`;
  ]]>
  </command>
  <inputs>
    <param name="infile" type="data" format="nmrML" optional="False" multiple="True" label="Collection data" />
  </inputs>
  <outputs>
    <data name="outfile" type="data" format="zip" label="Zipped nmrML collection" />
  </outputs>
  <help>Create a zip archive of a nmrML collection.</help>
</tool>

